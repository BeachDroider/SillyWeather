<?xml version="1.0" encoding="utf-8"?>


<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/forecast_weather_list_item_height"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/forecast_default_vertical_padding"
    android:paddingLeft="@dimen/forecast_default_horizontal_padding"
    android:paddingRight="@dimen/forecast_default_horizontal_padding"
    android:paddingTop="@dimen/forecast_default_vertical_padding">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_forecast_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_1" />

        <TextView
            android:id="@+id/tv_forecast_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_1" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_forecast_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/forecast_icon_horizontal_margin"
        android:layout_marginRight="@dimen/forecast_icon_horizontal_margin"
        android:adjustViewBounds="true"
        android:scaleType="centerInside" />

    <LinearLayout
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_forecast_max"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_1" />

        <TextView
            android:id="@+id/tv_forecast_min"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_1" />

    </LinearLayout>


</LinearLayout>

